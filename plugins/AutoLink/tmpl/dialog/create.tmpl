<mt:setvarblock name="page_title"><__trans phrase="Create AutoLink Rule"></mt:setvarblock>
<mt:setvarblock name="html_head" append="1">
<link rel="stylesheet" href="<mt:var name="static_uri">plugins/AutoLink/styles/app.css" type="text/css" />
</mt:setvarblock>
<mt:include name="dialog/header.tmpl">

<form method="post" action="<mt:var name="script_url">" target="_top">
<input type="hidden" name="__mode" value="autolink_save" />
<input type="hidden" name="blog_id" value="<mt:var name="blog_id">" />
<input type="hidden" name="rule_id" value="<mt:var name="rule_id">" />

<mtapp:setting
    id="label"
    label_class="top-label"
    label="<__trans phrase="Rule Description">"
    hint="Enter in a short description of your linking rule."
    show_hint="1">
      <input id="label" type="text" name="label" value="<mt:var name="label" />" class="full-width" />
</mtapp:setting>

<mtapp:setting
    id="pattern"
    label_class="top-label"
    label="<__trans phrase="Pattern">"
    hint="Enter in a string or regular expression to link to."
    show_hint="1">
      <input id="pattern" type="text" name="pattern" value="<mt:var name="pattern" />" class="full-width" /><br />
</mtapp:setting>

<mtapp:setting
    id="pattern_type"
    label_class="top-label"
    label="<__trans phrase="Pattern">"
    show_label="0"
    show_hint="1">
      <input type="checkbox" id="opts_regex" name="regex" value="1" <mt:if name="regex">checked </mt:if>/> <label for="opts_regex">Regular Expression</label>
      &nbsp;&nbsp;
      <input type="checkbox" id="opts_global" name="global" value="1" <mt:if name="global">checked </mt:if>/> <label for="opts_global">Link all occurences</label>
      &nbsp;&nbsp;
      <input type="checkbox" id="opts_case" name="case" value="1" <mt:if name="case">checked </mt:if>/> <label for="opts_case">Case Insensitive?</label>
      &nbsp;&nbsp;
      <input type="checkbox" id="opts_new" name="new_window" value="1" <mt:if name="new_window">checked </mt:if>/> <label for="opts_new">Open link in new window?</label>
</mtapp:setting>

<mtapp:setting
    id="url"
    label_class="top-label"
    label="<__trans phrase="Destination URL">"
    show_hint="0">
      <input id="url" type="text" name="url" value="<mt:var name="destination" />" class="full-width" />
</mtapp:setting>

<div class="actions-bar">
    <div class="actions-bar-inner pkg actions">
        <button
            type="submit"
            accesskey="s"
            title="<__trans phrase="Continue">"
            class="primary-button"
            ><__trans phrase="Continue"></button>
        <button
            onclick="closeDialog(); return false"
            type="submit"
            accesskey="x"
            title="<__trans phrase="Cancel (x)">"
            ><__trans phrase="Cancel"></button>
    </div>
</div>
</form>
<mt:include name="dialog/footer.tmpl">
